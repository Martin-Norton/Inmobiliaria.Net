@model IEnumerable<inmobiliariaNortonNoe.Models.TipoInmueble>
@{
    ViewData["Title"] = "Tipos de Inmueble";
}
<h2>Tipos de Inmueble</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tipo in Model)
        {
            <tr>
                <td>@tipo.Nombre</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@tipo.Id">Ver MÃ¡s</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@tipo.Id">Editar</a>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@tipo.Id">Baja</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Agregar un Tipo de Inmueble</a>
