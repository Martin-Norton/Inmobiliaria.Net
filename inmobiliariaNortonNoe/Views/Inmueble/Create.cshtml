@model inmobiliariaNortonNoe.Models.Inmueble

@{
    ViewData["Title"] = "Crear Inmueble";
}

<h2>Crear Inmueble</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" required />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ambientes"></label>
        <input asp-for="Ambientes" type="number" class="form-control" required />
        <span asp-validation-for="Ambientes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Superficie"></label>
        <input asp-for="Superficie" type="number" step="0.1" class="form-control" required />
        <span asp-validation-for="Superficie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PropietarioId"></label>
        <select asp-for="PropietarioId" asp-items="ViewBag.Propietarios" class="form-control" required>
            <option value="">Seleccione un Propietario</option>
        </select>
        <span asp-validation-for="PropietarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Uso"></label>
        <select asp-for="Uso" class="form-control">
            <option value="Residencial">Residencial</option>
            <option value="Comercial">Comercial</option>
        </select>
        <span asp-validation-for="Uso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Disponible"></label>
        <input asp-for="Disponible" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
