@model Inmueble
<link rel="stylesheet" href="~/css/Inmueble/Eliminar.css">
    <h2>Eliminar Inmueble</h2>
    <h3>¿Estás seguro de que deseas eliminar este inmueble?</h3>
    <dl class="row">
        <dt class="col-sm-2">Dirección:</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>
        <dt class="col-sm-2">Precio:</dt>
        <dd class="col-sm-10">@Model.Precio</dd>
        <dt class="col-sm-2">Tipo:</dt>
        <dd class="col-sm-10">@Model.Tipo.Nombre</dd>
        <dt class="col-sm-2">Uso:</dt>
        <dd class="col-sm-10">@Model.Uso</dd>
    </dl>
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>