@model Inmueble
<h2>Editar Inmueble</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
    </div>
    
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Uso"></label>
        <input asp-for="Uso" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cantidad_Ambientes"></label>
        <input asp-for="Cantidad_Ambientes" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="Coordenadas"></label>
        <input asp-for="Coordenadas" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Id_Propietario"></label>
        <input asp-for="Id_Propietario" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
