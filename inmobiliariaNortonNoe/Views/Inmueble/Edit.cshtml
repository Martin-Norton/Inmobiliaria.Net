@model Inmueble
<h2>Editar Inmueble</h2>
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Uso"></label>
        <select asp-for="Uso" class="form-control">
            <option value="">-- Seleccionar Uso --</option>
            <option value="Residencial">Residencial</option>
            <option value="Comercial">Comercial</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Cantidad_Ambientes"></label>
        <input asp-for="Cantidad_Ambientes" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="Coordenadas"></label>
        <input asp-for="Coordenadas" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Id_Propietario" class="control-label"></label>
        <select asp-for="Id_Propietario" asp-items="ViewBag.Propietarios" class="form-control"></select>
        <span asp-validation-for="Id_Propietario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PortadaFile" class="control-label"></label>
        <input asp-for="PortadaFile" type="file" class="form-control" />
        <span asp-validation-for="PortadaFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
