@model inmobiliariaNortonNoe.Models.Pago

@{
    ViewData["Title"] = "Registrar Pago";
}

<h2>Registrar Pago</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ContratoId"></label>
        <select asp-for="ContratoId" asp-items="ViewBag.Contratos" class="form-control" required>
            <option value="">Seleccione un Contrato</option>
        </select>
        <span asp-validation-for="ContratoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumeroPago"></label>
        <input asp-for="NumeroPago" type="number" class="form-control" required />
        <span asp-validation-for="NumeroPago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaPago"></label>
        <input asp-for="FechaPago" type="date" class="form-control" required />
        <span asp-validation-for="FechaPago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MetodoPago"></label>
        <select asp-for="MetodoPago" class="form-control">
            <option value="Efectivo">Efectivo</option>
            <option value="Transferencia">Transferencia</option>
            <option value="Tarjeta">Tarjeta</option>
        </select>
        <span asp-validation-for="MetodoPago" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
