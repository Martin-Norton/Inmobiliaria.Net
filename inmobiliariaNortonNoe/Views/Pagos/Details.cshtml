@model inmobiliariaNortonNoe.Models.Pago

@if (Model != null)
{
    <h2>Detalles del Pago</h2>

    <div class="form-group">
        <label>Contrato</label>
        <p>@Model.Contrato.Inquilino.Nombre @Model.Contrato.Inquilino.Apellido - @Model.Contrato.Inmueble.Direccion</p>
    </div>

    <div class="form-group">
        <label>Número de Pago</label>
        <p>@Model.NumeroPago</p>
    </div>

    <div class="form-group">
        <label>Fecha de Pago</label>
        <p>@Model.FechaPago.ToShortDateString()</p>
    </div>

    <div class="form-group">
        <label>Monto</label>
        <p>$@Model.Monto</p>
    </div>

    <a asp-action="Index" class="btn btn-secondary">Volver</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
}
else
{
    <p>El pago no se encontró.</p>
}
