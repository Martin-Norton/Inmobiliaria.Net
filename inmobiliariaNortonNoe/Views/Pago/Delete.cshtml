@model inmobiliariaNortonNoe.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h2>¿Estás seguro que deseas eliminar este pago?</h2>

<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Contrato</dt>
        <dd class="col-sm-10">@Model.Id_Contrato</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha_Pago.ToShortDateString()</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Monto</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Id_Contrato" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="PagosPorContrato" asp-route-idContrato="@Model.Id_Contrato" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
