@model inmobiliariaNortonNoe.Models.Pago

@{
    ViewData["Title"] = "Cargar Pago";
}

<h2>Cargar Pago</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Id_Contrato"></label>
        <input asp-for="Id_Contrato" class="form-control"  required/>
        <span asp-validation-for="Id_Contrato" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha_Pago"></label>
        <input asp-for="Fecha_Pago" class="form-control" type="date" required />
        <span asp-validation-for="Fecha_Pago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" required />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

