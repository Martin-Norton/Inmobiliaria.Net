@model Contrato

@{
    ViewData["Title"] = "Renovar Contrato";
}
<head>
    <link rel="stylesheet" href="~/css/Contrato/Create.css" />
</head>
<body>

<h2>Renovar Contrato</h2>

<form asp-action="Renovar" method="post" class="cont">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Inmueble</label>
        <input type="hidden" asp-for="ID_Inmueble" />
        <input class="form-control" value="@ViewBag.InmuebleDireccion" disabled />
    </div>

    <div class="form-group">
        <label>Inquilino</label>
        <input type="hidden" asp-for="ID_Inquilino" />
        <input class="form-control" value="@ViewBag.InquilinoNombre" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Fecha_Inicio"></label>
        <input asp-for="Fecha_Inicio" type="date" class="form-control" />
        <span asp-validation-for="Fecha_Inicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fecha_Fin"></label>
        <input asp-for="Fecha_Fin" type="date" class="form-control" />
        <span asp-validation-for="Fecha_Fin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Monto_Alquiler"></label>
        <input asp-for="Monto_Alquiler" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Monto_Alquiler" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
            <option value="">-- Seleccionar Estado --</option>
            <option value="Vigente">Vigente</option>
            <option value="Terminado">Terminado</option>
            <option value="Anulado">Anulado</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

</body>
