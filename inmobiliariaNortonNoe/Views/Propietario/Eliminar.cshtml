@model inmobiliariaNortonNoe.Models.Propietario

@{
    ViewData["Title"] = "Eliminar Propietario";
}

<h2>¿Estás seguro de que deseas eliminar al propietario?</h2>

<div>
    <strong>Nombre:</strong> @Model.Nombre @Model.Apellido<br />
    <strong>DNI:</strong> @Model.Dni<br />
    <strong>Teléfono:</strong> @Model.Telefono<br />
    <strong>Email:</strong> @Model.Email<br />
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
